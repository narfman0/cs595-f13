			<script type="text/javascript">
				var pubDate = jQuery("p.timestamp");
				var postDate = new Date(pubDate.text());
				var today = new Date();
				var diff = ((today.getTime() - postDate.getTime()) / 1000).toFixed(0);
				var min = (diff / 60).toFixed(0);
				var timeSince = "";
				if (min == 0) {
					timeSince = "Just now";
				} else if (min == 1) {
					timeSince = "1 min ago";
				} else if (min <= 59) {
					timeSince = min + " mins ago";
				} else if (min <= 119) {
					timeSince = "1 hour ago";
				} else if (min <= 1439) {
					timeSince = (min / 60).toFixed(0) + " hours ago";
				} else if (min <= 2879) {
					timeSince = "1 day ago";
				} else if (min <= 43199) {
					timeSince = (min / 24 / 60).toFixed(0) + " days ago";
				} else if (min <= 86399) {
					timeSince = "1 month ago";
				} else if (min <= 518399) {
					timeSince = (min / 30 / 24 / 60).toFixed(0) + " months ago";
				}
				pubDate.text(timeSince);
			</script>
