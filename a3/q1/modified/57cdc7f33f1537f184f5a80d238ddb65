{
    rurl_qs = "goto=http://forums.miamiherald.com"
}
else 
{ 
    rurl_qs = "goto="+loc 
}
var insitecookie=document.cookie.match('miamiherald_user_auth');
if (GetCookie(insitecookie)) {              
    var name = (GetCookie(insitecookie).replace(/\|.*/,""));
    name = name.replace(/\.threshold/ig,'Guest');
} else 
{
     name = 'Guest'
}
document.write('<li class="greeting">Welcome ' + name + ' </li>');
document.write('<span id="nonmember"><li><a href="http://www.miamiherald.com/reg-bin/int.cgi?mode=login&' + rurl_qs + '">Login</a></li><li><a href="/reg-bin/int.cgi?mode=register">Register</a></li></span>')
