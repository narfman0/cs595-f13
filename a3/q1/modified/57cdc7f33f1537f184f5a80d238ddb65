$(document).ready( function() {
				/*
				 * New navigation on click functionality
				 */

				$("#main-navbar > ul > li:not(.l)").hover(
					function(e) {
						var _this = $(this),
								siblings = _this.siblings();
	
						hoverTimeout = setTimeout(function() {
							siblings.removeClass("open");
							_this.addClass("open");
							//$(".auto-crop:visible").autoCrop();
						}, "350");

					},
					function(e) {
						var _this = $(this);
						clearTimeout(hoverTimeout);
	
						setTimeout(function() {
	
							_this.removeClass("open");
						}, "350");
					});

				// Hide the nav on a click anywhere
				//$(document).click(function() {
					//$("#main-navbar ul li.open").removeClass("open");
				//});
	});
</script>


 

 
