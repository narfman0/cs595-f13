<script type="text/javascript" language="javascript">
    function FormIsValid()
    {
        var formValid = false;var errorMessage = document.getElementById("errorMessage");var lastName = document.getElementById("lastName").value;
        if (lastName.length > 1) { formValid = true;errorMessage.style.display = "none";}
        else{errorMessage.innerHTML = "Please enter at least two characters in the Last Name field.";errorMessage.style.display = "block";}
        return formValid;
    }    
