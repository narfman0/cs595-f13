<script type="text/javascript">document.documentElement.className='js';</script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.2.6/jquery.min.js" type="text/javascript"></script>
<script src="/js/aff_tracking.js" type="text/javascript"></script>
<script type="text/javascript" src="js/jquery.cookie.js"></script>
<script type="text/javascript">
	document.documentElement.className='js';

	var ibood = {};
	ibood.variant       = 'health-beauty-nl';
	ibood.lang          = 'nl';
	ibood.offer_id      = 40307;
	ibood.offer_ts      = 1380232985;
	ibood.offer_type    = 0;
	ibood.queue_slot_id = 44883;

	jQuery(function ($) {
		/* Placeholder toggle */
		$(':input[placeholder]').each(function () {
			$(this).val($(this).attr('placeholder'))
			  .focus(function () {
				if ($(this).attr('placeholder') == this.value) {
					$(this).val('')
					       .addClass('active');
				}
			  })
			  .blur(function () {
					if ('' == this.value) {
						$(this).val($(this).attr('placeholder'))
						       .removeClass('active');
					};
			  });
		});

		/* Log in / Log out toggle */
		if (isLoggedIn()) {
			$('#header .login').parent().addClass('loggedin');
		}
		else {
			$('#header .login').parent().removeClass('loggedin');
		}

		/* Subscribe toggle */
		if (isSubscribed()) {
			$('#header .subscribe').addClass('subscribed');
		}
		else {
			$('#header .subscribe').removeClass('subscribed');
		}

		/* Subscribe submit */
		$(".subscribe form").submit(function (e) {
			var form   = $(this);
			var parent = $(this).parent();
			var url    = $(this).attr('action');
			var fEmail = $('input[name=email]', form);

			if (false === form.hasClass('loading')) {
				if ('' == fEmail.val() || fEmail.attr('placeholder') == fEmail.val()) {
					fEmail.focus();
				}
				else {
					form.addClass('loading');

					$.post(
						url,
						form.serialize(),
						function (response) {
							var p = $('p', parent);

							form.removeClass('loading');
							$('.error', parent).remove();

							if (response.error_msg) {
								$('<span class="error">' + response.error_msg + '</span>').appendTo(parent);
							}
							else
							{
								p.show();
								$('h2, form', parent).hide();

								// add tracking pixel to success page
								affiliate_tracking_place_pixels(response.tracking_codes);
							}
						},
						'json'
					);
				}
			}

			e.preventDefault();
		});

		/* Subscribe fade-out */
		var timer;
		$(".subscribe p").hover(
			function (e) {
				$(this).parent().stop(true); // Cancel fadeout
				clearTimeout(timer);
		},
			function (e) {
				var parent = $(this).parent();

				timer = setTimeout(function () {
					parent.fadeOut(1000);
				}, 5000);
		});

		function readCookie(name) {
			var ca     = document.cookie.split(';');
			var result = null;

			for (var i=0;i < ca.length;i++) {
				var c = ca[i];
				while (' ' == c.charAt(0)) c = c.substring(1, c.length);
				if (0 == c.indexOf(name + '=')) {
					result = c.substring((name.length + 1), c.length);
					break;
				};
			}
			return result;
		}

		function isLoggedIn() {
			return (null != readCookie('userid'));
		}

		function isSubscribed() {
			return (1 == readCookie('subscribed'));
		}
	});
</script>

