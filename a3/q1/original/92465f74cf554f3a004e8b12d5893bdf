        <div id="main" itemscope itemtype="http://schema.org/NewsArticle">
            


<script type="text/javascript">
    jQuery(document).ready(function($) {
        var pathname = window.location.pathname;
        var bcList = pathname.split("/");
        var bcName;
        var bcURL="";
        var stop;
        var pageType = "article";

        if (pageType == "article") { bcList.pop(); } //Removing last item (article title)

        $.each(bcList, function(i,val) {
            //Replace or remove values
            var obj = {};
            obj['review'] = '';
            obj['people-profile'] = '';
            obj['company-profile'] = '';
            obj['people-companies'] = 'WWDirectory';
            obj['fashion-designer'] = 'Collections A&#8211;Z';
            obj['fashion-memopad'] = 'Memo Pad';

            if (obj[val] || obj[val]=="") {
                val = obj[val];
                }
            if (val != "") {
                bcURL = bcURL+"/"+val; /*Construct URL*/
                bcName = val.replace(/[_,-]+/g," "); /*Replace any number or non-alpha*/
                if (bcName.length>28) { bcName = bcName.slice(0,28)+"..."; } /*For incomplete Blogs names*/
                //End the BC list building
                if (bcName.indexOf("Collections A")>-1) {
                    //bcName
                    stop="true"; // Stop at Collections
                    }
                if (i< bcList.length-1 || (i< bcList.length && bcName == "WWDirectory")) {
                    if (bcName == "WWDirectory") {
                        bcURL = "/people-companies";
                    }
                    $("#bread-crumb ul").append("<li><a href='"+bcURL+"'>"+bcName+"</a></li>");
                } else {
                    if (bcURL == "/subscriptions/1" || bcURL == "/subscriptions/2" || bcURL == "/subscriptions/3" || bcURL == "/subscriptions/4" || bcURL == "/subscriptions/5") {
                        bcName = "wwd";
                    }
                    if (bcName == "Memo Pad") {
                        bcURL = "/media-news/fashion-memopad";
                    }
                    /*No link for current page or still showing it?*/
                    //$("#bread-crumb ul").append("<li><class='bread-crumb-selected'>"+bcName+"</a></li>");
                    $("#bread-crumb ul").append("<li><a class='bread-crumb-selected' href='"+bcURL+"'>"+bcName+"</a></li>");
                }
            }
            return (stop != "true");
        });
    });
</script>







