    <script type="text/javascript" language="javascript">
        jQuery(document).ready(function($) {
            authorizeUser();
        });

        function authorizeUser() {
            var issueDates = new Array();
            var issueIds = new Array();
            
                issueIds.push('7186754');
                issueDates.push('2013-09-26 00:00:00.0');
            
                issueIds.push('7186758');
                issueDates.push('2013-09-26 00:00:00.0');
            
                issueIds.push('7183681');
                issueDates.push('2013-09-25 00:00:00.0');
            
                issueIds.push('7180935');
                issueDates.push('2013-09-24 00:00:00.0');
            
                issueIds.push('7177179');
                issueDates.push('2013-09-23 00:00:00.0');
            
            PublicationsController.getIssueLinksForRightRail(issueIds, issueDates, authCompleteCallback);
        }

        function authCompleteCallback(urls) {
            jQuery.each(urls, function(key,value){

                if(value.length==0){
                    var innards = '<a class="pdf-logo blocked" href="javascript:showRoadBlock()">DOWNLOAD PDF NOW</a>';
                    jQuery('#pub'+key).html(innards);
                    jQuery('#date-link'+key+' > a ').attr({'href' : 'javascript:showRoadBlock()'});
                    jQuery('#view-all-from-issue'+key+' > a ').attr({'href' : 'javascript:showRoadBlock()'});

                }
                else
                {
                    var innards = '<a class="pdf-logo" href="'+value+'" onclick="javascript: wwd.stats.trackAction(\'module\',\'publication-download\');">download pdf now</a>';
                    jQuery('#pub'+key).html(innards);
                    jQuery('#date-link'+key+' > a ').attr({'href' : ''+value+''});
                    jQuery('#view-all-from-issue'+key+' > a ').attr({'href' : ''+value+''});
                }

            });
        }
    </script>
