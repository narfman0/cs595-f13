            <script>
            function validateSearchForm() {
            //this.REQUIRED_ERROR = "The search field cannot be empty";
            var searchTextValue = jQuery("#global-searchTextValue").val();
            if(searchTextValue=="Search WWD.com" || searchTextValue=="Please Enter Search Text" || searchTextValue=="" || searchTextValue==null)
                {
                jQuery("#global-searchTextValue").attr("class","alert");
                //jQuery("#searchTextValue-alert").html(this.REQUIRED_ERROR);
                jQuery("#global-searchTextValue").val("Please Enter Search Text");
                //jQuery("#searchTextValue-alert").show();
                return false;
                } else {
                CN.site.wwd.features.doSearch(document.getElementById('global-searchTextValue').value);
                return false;
                }
            }
            function removeAlertHeader() {
                jQuery('#global-searchTextValue').removeClass('alert')
            }
            </script>
            <form id="gsearch" onsubmit="return validateSearchForm()">
                <input id="global-searchTextValue" type="text" onClick="removeAlertHeader();" onfocus="this.select();CN.site.wwd.features.inputValFocus(this,'Search WWD.com');CN.site.wwd.features.inputValFocus(this,'Please Enter Search Text');" value="Search WWD.com" />
