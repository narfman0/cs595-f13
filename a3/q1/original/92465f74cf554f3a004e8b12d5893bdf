<script>
/*
jQuery(document).ready(function() {
    var showVar = 'most-popular-viewed';
    var schedVar = 'runway-schedule';
    var coverVar = 'runway-coverage';
    jQuery('#most-popular-container .items a').attr('href', function(index, attr) {
        return attr + '?' + showVar;

    });


});*/

jQuery(".most-popular-container .items div:eq(0) a").live("click", function(){ //apply the following only to the selector specified on this line
    var hrefTest = (jQuery('.most-popular-container .items div:eq(0) a').attr('href')); //select any link in first div
    if (hrefTest.indexOf("module=") == -1) {   //before appending param, verify it does not exist
        var showVar = 'module=most-popular-viewed';
        jQuery(".most-popular-container .items div:eq(0) a").attr('href', function(index, attr) { //append param to url
            return attr + '?' + showVar;
        });
    }
});
jQuery(".most-popular-container .items div:eq(1) a").live("click", function(){ //apply the following only to the selector specified on this line
    var hrefTest = (jQuery('.most-popular-container .items div:eq(1) a').attr('href'));
    if (hrefTest.indexOf("module=") == -1) {   //before appending param, verify it does not exist
        var showVar = 'module=most-popular-emailed';
        jQuery(".most-popular-container .items div:eq(1) a").attr('href', function(index, attr) { //append param to url
            return attr + '?' + showVar;
        });
    }
});
jQuery(".most-popular-container .items div:eq(2) a").live("click", function(){ //apply the following only to the selector specified on this line
    var hrefTest = (jQuery('.most-popular-container .items div:eq(2) a').attr('href'));
    if (hrefTest.indexOf("module=") == -1) {   //before appending param, verify it does not exist
        var showVar = 'module=most-popular-commented';
        jQuery(".most-popular-container .items div:eq(2) a").attr('href', function(index, attr) { //append param to url
            return attr + '?' + showVar;
        });
    }
});


/*
jQuery("a").live("click", function(){
    jQuery(".most-popular-container .items a").attr("target","_blank");
    }); */
</script>




