	function getArrows(e) {
		if (window.event) {
			arrows=((event.which)||(event.keyCode));
		} else {
			arrows=e.keyCode;
		}		

		switch(arrows) {
			case 37:
				if ( backLink ) { window.location=backLink; } break;
			case 39:
				if ( nextLink ) { window.location=nextLink; } break;
		}
	 }
