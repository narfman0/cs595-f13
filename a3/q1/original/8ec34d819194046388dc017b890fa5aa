function setSubmit(){

if(document.getElementById("subscrNL").style.display == 'inline' ){
		document.getElementById("subscrNL").style.display = 'none';	
		document.getElementById("waitNL").style.display = 'inline';	
		document.getElementById("dati").innerHTML = '';	

}else{
		document.getElementById("subscrNL").style.display = 'inline';	
		document.getElementById("waitNL").style.display = 'none';	
}
}
	
