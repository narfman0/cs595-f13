<script type="text/javascript">
open_expand_id = null; 
function hideShow(id){
	if(document.getElementById){
		var obj = document.getElementById(id);
		var objImg = document.getElementById(id+'Img');
		if(obj.style.display == ''){
			obj.style.display = 'none';
			objImg.className = "rn_plus";
			if (open_expand_id){
				open_expand_id = null;
			}
		}else{
			if(open_expand_id){
				var tmp_open_expand_id = open_expand_id;
				open_expand_id = null;
				hideShow(tmp_open_expand_id);
			}
			open_expand_id = id;
			obj.style.display = '';
			objImg.className = "rn_minus";
		}
		obj = null;
		objImg = null;
	}
}
loaded_expand_id = new Array();		
function loadTreeChildren(aid, expandid){
	if(!contains(loaded_expand_id,expandid)){
		if(document.getElementById){
		//document.getElementById('A' + expandid + 'Loading').innerHTML = 'Loading...';
			var args={func:this.loadTreeChildrenResponse, 
	            uri:"/library/Library_RightNav_Ajax_Loader.asp", 
	            aid:aid,
	            expandid:expandid,
							params:expandid,
							method: "GET",
							disable_caching: true
	            };
	            ajax.Request(args);
		
			
		}
	}else{
		hideShow('A' + expandid);
	}
} 

function loadTreeChildrenResponse(data, expandid)
{
	data = data.responseText.substr(2)
	//document.getElementById('A' + expandid + 'Loading').innerHTML = '';
	//document.getElementById('A' + expandid + 'Content').innerHTML = data;
	document.getElementById('A' + expandid + 'Content').innerHTML = '<table class="RightNavContent" cellSpacing="0" cellPadding="0">'+ data + '</table>';
	if(document.getElementById('A' + expandid + 'More')){
		document.getElementById('A' + expandid + 'More').innerHTML = 'More...';
	}
	loaded_expand_id.push(expandid);
	hideShow('A' + expandid);
	
}

function contains(array, s_value){
    for(var i=0;i<array.length;i++){
			if (array[i] == s_value ) {
				return true;
            }
    }
    return false;
}
</script>
