<!-- 
function showHide(selText, ItemID){
  if (document.getElementById(ItemID).style.display.toLowerCase() == 'none'){
  	document.getElementById(ItemID).style.display = '';
	selText.innerHTML = 'Hide Rashi';
  }
  else{
	document.getElementById(ItemID).style.display = 'none';
	selText.innerHTML = 'Show Rashi';
  }
}
// -->
</script>

</table>
